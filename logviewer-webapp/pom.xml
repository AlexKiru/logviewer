<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.logviewer</groupId>
		<artifactId>logviewer</artifactId>
		<version>0.0.4-SNAPSHOT</version>
	</parent>
	<packaging>war</packaging>
	<artifactId>logviewer-webapp</artifactId>

	<dependencies>

		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-log4j12</artifactId>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<scope>runtime</scope>
		</dependency>

	</dependencies>

	<profiles>

		<profile>
			<id>jetty</id>
			<properties>
				<container.name>jetty</container.name>
				<jetty-version>7.6.7.v20120910</jetty-version>
			</properties>
			<dependencies>
				<dependency>
					<groupId>org.logviewer</groupId>
					<artifactId>logviewer-jetty</artifactId>
					<version>0.0.4-SNAPSHOT</version>
				</dependency>
			</dependencies>
			<build>
				<plugins>
					<plugin>
						<groupId>org.mortbay.jetty</groupId>
						<artifactId>jetty-maven-plugin</artifactId>
						<version>${jetty-version}</version>
						<configuration>
							<webApp>
								<contextPath>/logviewer</contextPath>
								<descriptor>${project.build.directory}/webapp/WEB-INF/web.xml</descriptor>
							</webApp>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>

		<profile>
			<id>tomcat</id>
			<properties>
				<container.name>tomcat</container.name>
			</properties>
			<dependencies>
				<dependency>
					<groupId>org.logviewer</groupId>
					<artifactId>logviewer-tomcat</artifactId>
					<version>0.0.4-SNAPSHOT</version>
				</dependency>
			</dependencies>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.tomcat.maven</groupId>
						<artifactId>tomcat7-maven-plugin</artifactId>
						<version>2.0</version>
						<configuration>
							<path>/logviewer</path>
							<warSourceDirectory>${project.build.directory}/webapp</warSourceDirectory>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>

	</profiles>

	<build>
		<resources>
			<resource>
				<directory>src/main/webapp</directory>
				<targetPath>${project.build.directory}/webapp</targetPath>
				<filtering>true</filtering>
			</resource>
		</resources>
	</build>

</project>